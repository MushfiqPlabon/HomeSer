{
  "version": 2,
  "builds": [
    {
      "src": "HomeSer/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "includeFiles": [
          "HomeSer/**/*",
          "static/**/*",
          "templates/**/*"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "HomeSer/wsgi.py"
    }
  ],
  "env": {
    "SERVERLESS": "1"
  },
  "buildCommand": "pip install -r requirements.txt && npm install && npm run build && python manage.py collectstatic --noinput",
  "outputDirectory": "staticfiles"
}